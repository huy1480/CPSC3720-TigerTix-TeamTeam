{
  "name": "tigertix-testing",
  "version": "1.0.0",
  "description": "Testing suite for TigerTix Sprint 2",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:admin": "cd backend/admin-service && jest",
    "test:client": "cd backend/client-service && jest",
    "test:frontend": "cd frontend && npm test",
    "test:all": "npm run test:admin && npm run test:client && npm run test:frontend"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "!backend/**/node_modules/**",
      "!backend/**/__tests__/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1"
  }
}
